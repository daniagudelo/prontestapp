        <hgroup>
            <h1>NAME OF THE WEBSITE</h1>        
            <h3>Latest Videos Carousel</h3>
        </hgroup>
      </div>
    </div>
    <div class="item slides">
      <div class="slide-2"></div>
      <div class="hero">        
        <hgroup>
            <h1>Thumbnail</h1>        
            <h3>Video 2</h3>
        </hgroup>       
      </div>
    </div>
    <div class="item slides">
      <div class="slide-3"></div>
      <div class="hero">        
        <hgroup>
            <h1>Thumbnail</h1>        
            <h3>Video 3</h3>
        </hgroup>
      </div>
    </div>
  </div> 
</div>

